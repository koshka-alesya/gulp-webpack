include ../icon-btn/icon-btn

mixin card-product(item)
    .card-product
        a.card-product__link(href=item.url title=item.name)
            img.card-product__img(src=item.img alt='')
            span.card-product__name.link(item.url title=item.title)=item.name
        .card-product__container
            .card-product__price!=item.price
                | &nbsp;руб.
            .card-product__btns
                +icon-btn('favourites')
                +icon-btn('cart')


